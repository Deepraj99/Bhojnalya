<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boarder"
    tools:context=".CustomerOrVendorActivity">

    <Button
        android:id="@+id/student_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/student"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="12dp"
        android:textSize="15sp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/vendor_button"
        app:layout_constraintEnd_toEndOf="@+id/vendor_button"
        app:layout_constraintStart_toStartOf="@+id/vendor_button" />

    <Button
        android:id="@+id/vendor_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vendor"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="12dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>